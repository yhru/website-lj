<div class="flex justify-center items-center h-full py-20">
  <div class="w-full max-w-lg bg-white shadow-md rounded-lg overflow-hidden">
    <div class="bg-gray-800 text-white text-center py-4">
      <h2 class="text-2xl font-semibold">Lou Joseau</h2>
    </div>
    <div class="p-6">
      <div class="flex justify-center mb-6">
        <img src="<%= asset_path 'lj2-remove.png' %>" alt="Photo de Lou Joseau, Avocate au Barreau d’Amiens" class="h-24 w-24 rounded-full object-cover">
      </div>
      <h5 class="text-xl font-semibold text-gray-900 mb-2">Avocate au Barreau d’AMIENS</h5>
      <p class="text-gray-700 mb-4">Spécialisée en Droit Pénal et Droit Civil</p>
      
      <ul class="mb-6">
        <li class="py-3 border-b border-gray-300">52 rue Victor Hugo</li>
        <li class="py-3 border-b border-gray-300">80000 Amiens</li>
        <li class="py-3 border-b border-gray-300">06 69 91 87 44</li>
        <li class="py-3 text-blue-500 hover:text-blue-700 transition">
          <a href="mailto:lou.joseau@gmail.com">lou.joseau@gmail.com</a>
        </li>
      </ul>

      <!-- Bouton Contact - Headless UI Dialog -->
      <button @click="isModalOpen = true" class="w-full block text-center px-4 py-2 border border-blue-500 text-blue-500 rounded-md hover:bg-blue-500 hover:text-white transition duration-200">
        Contactez-moi
      </button>

      <!-- Modal de contact avec Headless UI -->
      <template x-if="isModalOpen">
        <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-gray-800 bg-opacity-50">
          <div class="bg-white rounded-lg shadow-lg max-w-lg w-full p-6">
            <div class="text-right">
              <button @click="isModalOpen = false" class="text-gray-500 hover:text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            <h3 class="text-xl font-semibold mb-4">Contactez Lou Joseau</h3>
            <p class="text-gray-700 mb-6">Vous pouvez contacter Lou Joseau directement à l'adresse suivante :</p>
            <p class="text-gray-900 font-semibold">lou.joseau@gmail.com</p>
            <div class="mt-4">
              <a href="mailto:lou.joseau@gmail.com" class="inline-block w-full px-4 py-2 bg-blue-500 text-white text-center rounded-md hover:bg-blue-600 transition">
                Envoyer un Email
              </a>
            </div>
          </div>
        </div>
      </template>
    </div>
    <div class="bg-gray-100 text-center py-4">
      <a href="https://www.linkedin.com/in/lou-joseau-53b0231a3/?originalSubdomain=fr" target="_blank" class="text-gray-600 hover:text-blue-600 transition duration-200" aria-label="LinkedIn de Lou Joseau">
        <i class="fab fa-linkedin text-2xl"></i>
      </a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('modal', () => ({
      isModalOpen: false,
    }))
  })
</script>
